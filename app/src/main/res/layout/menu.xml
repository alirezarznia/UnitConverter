<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.unitconverter.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7D8BC4"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Unit Converter"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="199dip"
            android:orientation="vertical">

        </LinearLayout>

        <Button
            android:id="@+id/dis_btn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="104dip"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:background="@drawable/button_corner"
            android:text="@string/dis_name"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/vol_btn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="104dip"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:background="@drawable/button_corner"
            android:text="@string/vol_name"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/spe_btn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="104dip"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:background="@drawable/button_corner"
            android:text="@string/spe_name"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/tem_btn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="104dip"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:background="@drawable/button_corner"
            android:text="@string/tem_name"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.5"
            android:orientation="vertical"></LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Designed by"
            android:textColor="#B0A8C5"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:gravity="center"
            android:text="Alirezarznia"
            android:textColor="#B0A8C5"
            android:textSize="30sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>